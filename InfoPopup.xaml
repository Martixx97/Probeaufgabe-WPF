<Window x:Class="Probeaufgabe_WPF.InfoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Probeaufgabe_WPF"
        mc:Ignorable="d"
        Title="InfoPopup" Height="100" Width="200">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" HorizontalContentAlignment="Center">
                Daten erfolgreich angelegt.
            </Label>

            <Button HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="0,20,10,0" Padding="10,0,10,0" x:Name="Exit_Button" Click="Exit_Button_Click">
                Exit.
            </Button>
            <StackPanel Width="400" Orientation="Horizontal">


            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
